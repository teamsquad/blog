<% if @path %>
  <header>
    <h1><%= @path %></h1>
  </header>
<% end %>
<% if archives.length > 0 %>
  <% for entry in archives %>
    <article>
      <header>
        <h1><a href="<%= entry.path %>"><%= entry.title %></a></h1>
        <p class="date"><%= entry.date %></p>
      </header>
    </article>
  <% end %>
<% end %>
