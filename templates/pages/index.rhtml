<section id="articles">
  <% for article in articles[0...3] %>
    <article class="post">
      <header>
        <h1><a href="<%= article.path %>"><%= article.title %></a></h1>
        <p class="date"><%= article.date %></p>
      </header>

      <section class="content">
        <%= article.summary %>
      </section>
      <p class="more"><a href="<%= article.path %>">Read on &raquo;</a></p>
    </article>
  <% end %>
</section>

<section id="archives">
  <%= archives[3..-1] %>
</section>

